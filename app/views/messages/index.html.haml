.chat-side
  .chat-side__user
    .chat-side__user__content
      .chat-side__user__name
        User Name
      .chat-side__user--new-group
        =link_to '#' do
          %i.fa.fa-pencil-square-o
      .chat-side__user--edit-user
        =link_to '#' do
          %i.fa.fa-cog
  .chat-side__groups
    .chat-side__groups-list
      =link_to '#' do
        .chat-side__group
          .chat-side__group-name
            group1
          .chat-side__group-message
            message1
.chat-main
  .chat-main__header
    .chat-main__header--group
      .chat-main__header--group-name
        group_name
      .chat-main__header--group-edit-btn
        =link_to "edit", "#"
    .chat-main__header-members
      members
  .chat-main__body
    .chat-main__body--messages-list
      .chat-main__message
        .chat-main__message-name user_name_1
        .chat-main__message-time  2019/1/1
        .chat-main__message-body  text
  .chat-main__footer
    %form.chat-main__footer-form
      .chat-main__footer-body
        %input.message{ placeholder: "type a message"}
        %label.chat-file
          %input.image{ type: "file"}
          %i.fa.fa-image
      %input.submit{ type: "submit", value: "SEND"}

